[core]
cache_dir = $XDG_CACHE_DIR/mopidy
config_dir = $XDG_CONFIG_DIR/mopidy
data_dir = $XDG_DATA_DIR/mopidy
max_tracklist_length = 10000

[logging]
color = true
console_format = %(levelname)-8s %(message)s
debug_format = %(levelname)-8s %(asctime)s [%(process)d:%(threadName)s] %(name)s\n  %(message)s
debug_file = mopidy.log
config_file =

[audio]
mixer = {{ audio_mixer}}
mixer_volume =
output = {{ audio_output }}
buffer_time =

[proxy]
scheme =
hostname =
port =
username =
password =

[mobile]
enabled = true
title = Mopidy Mobile on $hostname
ws_url =

[beetslocal]
enabled = true
beetslibrary = {{ beetslibrary }}
use_original_release_date = false

[bigbeet]
enabled = true
beetslibrary = {{ beetslibrary }}
bb_data_dir = {{ bb_data_dir }}

[soundcloud]
enabled = false  ; Extension disabled due to config errors.
explore_songs = 25
auth_token =   ; Must be set.

[somafm]
enabled = true
encoding = mp3
quality = fast

[spotify]
enabled = true
username =  {{ spotify_user }}
password =  {{ spotify_passwd }}
client_id = {{ spotify_client_id }}
client_secret = {{ spotify_client_secret }}
bitrate = 320
volume_normalization = true
private_session = false
timeout = 10
allow_cache = true
allow_network = true
allow_playlists = true
search_album_count = 20
search_artist_count = 10
search_track_count = 50
toplist_countries =

[yamaha]
enabled = false
host =   ; Config key not found.
source =   ; Config key not found.
party_mode = false  ; Config key not found.

[alsamixer]
enabled = true
card = 0
control = Master

[mpd]
enabled = true
hostname = ::
port = 6600
password =
max_connections = 20
connection_timeout = 60
zeroconf = Mopidy MPD server on $hostname
command_blacklist =
default_playlist_scheme = m3u

[http]
enabled = true
hostname = ::
port = 6680
static_dir =
zeroconf = Mopidy HTTP server on $hostname

[stream]
enabled = true
protocols =
  http
  https
  mms
  rtmp
  rtmps
  rtsp
metadata_blacklist =
timeout = 5000

[m3u]
enabled = true
base_dir =
default_encoding = latin-1
default_extension = .m3u8
playlists_dir =

[softwaremixer]
enabled = true

[file]
enabled = true
media_dirs =
  /data/music/music_data|EXT_MUSIC
show_dotfiles = false
follow_symlinks = false
metadata_timeout = 1000

[local]
enabled = false
library = json
media_dir =  /data/music
scan_timeout = 1000
scan_flush_threshold = 100
scan_follow_symlinks = false
excluded_file_extensions =
  .directory
  .html
  .jpeg
  .jpg
  .log
  .nfo
  .png
  .txt
