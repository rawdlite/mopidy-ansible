[core]
cache_dir = /data/music/music_var/mopidy
config_dir = /data/music/music_var/mopidy
data_dir = /data/music/music_var/mopidy
max_tracklist_length = 10000
restore_state = true

[logging]
color = true
console_format = %(levelname)-8s %(message)s
debug_format = %(levelname)-8s %(asctime)s [%(process)d:%(threadName)s] %(name)s\n  %(message)s
debug_file = mopidy.log
config_file =

[audio]
mixer = {{ lookup('env','AUDIO_MIXER') }}
mixer_volume = 68
output = {{ lookup('env','AUDIO_OUTPUT') }}
buffer_time =

[proxy]
scheme =
hostname =
port =
username =
password =

[mobile]
enabled = true
title = Mopidy Mobile on $hostname
ws_url =

[beetslocal]
enabled = false
beetslibrary = {{ lookup('env','BEETSLIBRARY') }}
use_original_release_date = false

[bigbeet]
enabled = true
beetslibrary = {{ lookup('env','BEETSLIBRARY') }}
bb_data_dir = {{ lookup('env','BB_DATA_DIR') }}

[soundcloud]
enabled = true
explore_songs = 25
auth_token =  {{ lookup('env','SOUNDCLOUD_AUTH_TOKEN') }}

[somafm]
enabled = true
encoding = mp3
quality = highest

[spotify]
enabled = true
username =  {{ lookup('env','SPOTIFY_USERNAME') }}
password =  {{ lookup('env','SPOTIFY_PASSWORD') }}
client_id = {{ lookup('env','SPOTIFY_CLIENT_ID') }}
client_secret = {{ lookup('env','SPOTIFY_CLIENT_SECRET') }}
bitrate = 320
volume_normalization = true
private_session = false
timeout = 10
allow_cache = true
allow_network = true
allow_playlists = true
search_album_count = 20
search_artist_count = 10
search_track_count = 50
toplist_countries =


[gmusic]
username = {{ lookup('env','G_MUSIC_USERNAME') }}
password = {{ lookup('env','G_MUSIC_PASSWORD') }}
deviceid = {{ lookup('env','G_MUSIC_DEVICEID') }}
bitrate = 320
radio_stations_in_browse = true

[yamaha]
enabled = true
host = {{ lookup('env','YAMAHA_HOST') }}
source = {{ lookup('env','YAMAHA_SOURCE') }}
party_mode = false

[alsamixer]
enabled = true
card = 1
control = Master

[mpd]
enabled = true
hostname = ::
port = 6600
password =
max_connections = 20
connection_timeout = 60
zeroconf = Mopidy MPD server on $hostname
command_blacklist =
  listall
  listallinfo
default_playlist_scheme = m3u

[http]
enabled = true
hostname = ::
port = 6680
static_dir =
zeroconf = Mopidy HTTP server on $hostname

[stream]
enabled = true
protocols =
  http
  https
  mms
  rtmp
  rtmps
  rtsp
metadata_blacklist =
timeout = 5000

[m3u]
enabled = true
base_dir =
default_encoding = latin-1
default_extension = .m3u8
playlists_dir = {{ lookup('env','PLAYLIST_DIR') }}

[softwaremixer]
enabled = true

[file]
enabled = true
media_dirs =
  /data/music|EXT_MUSIC
show_dotfiles = false
follow_symlinks = false
metadata_timeout = 1000

[local]
enabled = true
library = sqlite
media_dir =  /data/music
scan_timeout = 1000
scan_flush_threshold = 100
scan_follow_symlinks = false
excluded_file_extensions =
  .directory
  .html
  .jpeg
  .jpg
  .log
  .nfo
  .png
  .txt
